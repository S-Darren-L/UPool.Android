<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CABBBBBB"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle"   >

            <solid
                android:color="@color/White" >
            </solid>

            <stroke
                android:width="1dp"
                android:color="#C4CDE0" >
            </stroke>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" >
            </padding>

            <corners
                android:radius="5dp"   >
            </corners>

        </shape>
    </item>
</layer-list>
